@{
	ViewData["Title"] = "Lista de Servicio";
}

<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Servicios</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i>
				Crear Nuevo Servicio
			</a>
		</div>
	</div>

	<br />
	<br />
	<table id="tblServicios" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Orden</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts{
	<script src="~/js/servicio.js"></script>
}